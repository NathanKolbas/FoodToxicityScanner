<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>

            <solid android:color="#8F8F8F"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#00666666"/>

            <size
                android:width="120dp"
                android:height="120dp"/>

            <solid android:color="#CACACA"/>
        </shape>

    </item>
</layer-list>